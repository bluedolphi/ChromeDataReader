<Window x:Class="ChromeDataReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chrome数据读取工具" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="#F0F0F0">
            <Button Name="BtnDetectChrome" Content="检测Chrome" Width="100" Height="35" Margin="5" Click="BtnDetectChrome_Click"/>
            <Button Name="BtnReadCookies" Content="读取Cookie" Width="100" Height="35" Margin="5" Click="BtnReadCookies_Click"/>
            <Button Name="BtnReadSessions" Content="读取Session" Width="100" Height="35" Margin="5" Click="BtnReadSessions_Click"/>
            <Button Name="BtnReadStorage" Content="读取Storage" Width="100" Height="35" Margin="5" Click="BtnReadStorage_Click"/>
            <Button Name="BtnSearchTarget" Content="搜索目标数据" Width="120" Height="35" Margin="5" Click="BtnSearchTarget_Click"/>
            <Button Name="BtnClear" Content="清空" Width="80" Height="35" Margin="5" Click="BtnClear_Click"/>
        </StackPanel>
        
        <!-- 主内容区域 -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Chrome信息标签页 -->
            <TabItem Header="Chrome信息">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Chrome安装路径:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Name="CmbChromeInstalls" Width="400" Height="25" Margin="5"/>
                        <Button Name="BtnRefreshChrome" Content="刷新" Width="60" Height="25" Margin="5" Click="BtnRefreshChrome_Click"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" Name="DgChromeInfo" Margin="5" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            
            <!-- Cookie数据标签页 -->
            <TabItem Header="Cookie数据">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="域名过滤:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Name="TxtCookieFilter" Width="200" Height="25" Margin="5"/>
                        <Button Name="BtnFilterCookies" Content="过滤" Width="60" Height="25" Margin="5" Click="BtnFilterCookies_Click"/>
                        <Button Name="BtnExportCookies" Content="导出" Width="60" Height="25" Margin="5" Click="BtnExportCookies_Click"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" Name="DgCookies" Margin="5" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            
            <!-- Storage数据标签页 -->
            <TabItem Header="Storage数据">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="搜索键名:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Name="TxtStorageSearch" Width="200" Height="25" Margin="5"/>
                        <Button Name="BtnSearchStorage" Content="搜索" Width="60" Height="25" Margin="5" Click="BtnSearchStorage_Click"/>
                        <Button Name="BtnExportStorage" Content="导出" Width="60" Height="25" Margin="5" Click="BtnExportStorage_Click"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" Name="DgStorage" Margin="5" AutoGenerateColumns="True" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            
            <!-- 自定义操作标签页 -->
            <TabItem Header="自定义操作">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 读取数据 -->
                    <GroupBox Grid.Column="0" Header="读取数据" Margin="5">
                        <StackPanel Margin="10">
                            <TextBlock Text="网站URL:" Margin="0,5"/>
                            <TextBox Name="TxtReadUrl" Height="25" Margin="0,5"/>
                            
                            <TextBlock Text="键名:" Margin="0,5"/>
                            <TextBox Name="TxtReadKey" Height="25" Margin="0,5"/>
                            
                            <Button Name="BtnCustomRead" Content="读取数据" Height="35" Margin="0,10" Click="BtnCustomRead_Click"/>
                            
                            <TextBlock Text="读取结果:" Margin="0,10,0,5"/>
                            <TextBox Name="TxtReadResult" Height="200" Margin="0,5" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- 写入数据 -->
                    <GroupBox Grid.Column="1" Header="写入数据" Margin="5">
                        <StackPanel Margin="10">
                            <TextBlock Text="网站URL:" Margin="0,5"/>
                            <TextBox Name="TxtWriteUrl" Height="25" Margin="0,5"/>
                            
                            <TextBlock Text="键名:" Margin="0,5"/>
                            <TextBox Name="TxtWriteKey" Height="25" Margin="0,5"/>
                            
                            <TextBlock Text="值:" Margin="0,5"/>
                            <TextBox Name="TxtWriteValue" Height="100" Margin="0,5" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto"/>
                            
                            <Button Name="BtnCustomWrite" Content="写入数据" Height="35" Margin="0,10" Click="BtnCustomWrite_Click"/>
                            
                            <TextBlock Text="操作结果:" Margin="0,10,0,5"/>
                            <TextBox Name="TxtWriteResult" Height="80" Margin="0,5" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- 日志标签页 -->
            <TabItem Header="操作日志">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Name="BtnClearLog" Content="清空日志" Width="80" Height="25" Margin="5" Click="BtnClearLog_Click"/>
                        <Button Name="BtnSaveLog" Content="保存日志" Width="80" Height="25" Margin="5" Click="BtnSaveLog_Click"/>
                    </StackPanel>
                    
                    <TextBox Grid.Row="1" Name="TxtLog" Margin="5" TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontFamily="Consolas"/>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- 底部状态栏 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="TxtStatus" Text="就绪"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="TxtProgress" Text=""/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>
